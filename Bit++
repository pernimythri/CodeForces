import java.util.*;
public class Solution{
    int Bit(String s)
    {
    if(s.contains("++"))
    return 1;
    else
    return -1;
    }
    
    public static void main(String[] args)
    {
        Solution obj=new Solution();
        Scanner sc=new Scanner(System.in);
        int ans=0;
        int t=sc.nextInt();
        for(int i=0;i<t;i++)
        {
            String s=sc.next();
            ans+=obj.Bit(s);
        }
        System.out.println(ans);
       
    }
}
